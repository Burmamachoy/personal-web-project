<%- include('../../compartido/cabecera') %>
<div class="container">
    <%if(datos.error){%>
    <div class="alert alert-danger" role="alert">
        <%=datos.error%>
    </div>
    <%}%>
    <div class="form-group">
        <h1 align="center">Editar Anime</h1>
    </div>
    <form action="http://localhost:3000/animes/actualizar/<%=datos.anime.id%>"
          method="post">
        <div class="form-group">
            <input id="nombreAnimeID"
                   type="text"
                   name="nombre"
                   title="Ingresar nombre del anime"
                   class="form-control"
                   value="<%=datos.anime.nombre%>">
            <small id="nombreAnimeIDHelp"
                   class="form-text text-muted">
                Ingresa el nombre del Anime
            </small>
        </div>
        <div class="form-group">
            <input id="directorAnimeID"
                   type="text"
                   name="director"
                   title="Ingresar el director del Anime"
                   class="form-control"
                   value="<%=datos.anime.director%>">
            <small id="directorIDHelp"
                   class="form-text text-muted">
                Ingresa el nombre del director
            </small>
        </div>
        <div class="form-group">
            <input id="estudioID"
                   type="text"
                   name="estudio"
                   title="Ingresar el estudio del anime"
                   class="form-control"
                   value="<%=datos.anime.estudio%>">
            <small id="estudioIDHelp"
                   class="form-text text-muted">
                Ingresa el Estudio del Anime
            </small>
        </div>
        <div class="form-group">
            <input id="anioLanzamientoID"
                   type="number"
                   name="anioLanzamiento"
                   title="Ingresar el Año de Lanzamiento del anime"
                   class="form-control"
                   value="<%=datos.anime.anioLanzamiento%>">
            <small id="anioLanzamientoIDHelp"
                   class="form-text text-muted">
                Ingresa el Año de Lanzamiento del anime
            </small>
        </div>
        <div class="form-group">
            <input id="episodiosID"
                   type="number"
                   name="numeroEpisodios"
                   title="Ingresar el número de episodios del anime"
                   class="form-control"
                   value="<%=datos.anime.numeroEpisodios%>">
            <small id="espisodiosIDHelp"
                   class="form-text text-muted">
                Ingresar el número de episodios del anime
            </small>
        </div>
        <div class="form-group">
            <input id="precioAnimeID"
                   type="number"
                   name="precio"
                   title="Ingresar el precio del Anime"
                   class="form-control"
                   step="0.01"
                   value="<%=datos.anime.precio%>">
            <small id="precioAnimeIDHelp"
                   class="form-text text-muted">
                Ingresa el precio del Anime, no puede ser 0
            </small>
        </div>
        <button type="submit"
                class="btn btn-success">
            Editar
        </button>
        <button type="reset"
                class="btn btn-secondary">
            Reset
        </button>
    </form>
</div>
<%- include('../../compartido/pie-de-pagina') %>
