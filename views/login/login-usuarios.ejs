<%- include('../compartido/cabecera')%>
<div class="container">
    <% if(datos.mensaje){ %>
        <div class="alert alert-primary" role="alert">
            <%= datos.mensaje %>
        </div>
    <% } %>
    <% if(datos.error){ %>
        <div class="alert alert-danger" role="alert">
            <%= datos.error %>
        </div>
    <% } %>
    <h1 align="center">Login Usuario</h1>
    <form action="http://localhost:3000/auth/login"
          method="post">
        <div class="form-group">
            <label for="usernameID">Correo electrónico</label>
            <input id="usernameID"
                   type="text"
                   name="username"
                   placeholder="some@text.com"
                   title="Ingresar nombre de usuario"
                   class="form-control">
            <small id="correoIDHelp"
                   class="form-text text-muted">
                Ingresa tu correo electrónico
            </small>
        </div>
        <div class="form-group">
            <label for="passwordID">Password</label>
            <input id="passwordID"
                   type="password"
                   name="password"
                   placeholder="********"
                   title="Ingresar password del usuario"
                   class="form-control">
            <small id="nombreIDHelp"
                   class="form-text text-muted">
                Ingresar
            </small>
        </div>
        <div class="form-group" align="center">
            <button type="submit"
                    class="btn btn-success">
                Login
            </button>
            <button type="reset"
                    class="btn btn-secondary">
                Limpiar
            </button>
            <a href="/usuarios/registro-usuario"
               class="btn btn-primary btn-lg active"
               role="button"
               aria-pressed="true">
                Registro
            </a>
        </div>
    </form>
</div>
<%- include('../compartido/pie-de-pagina')%>
