<%- include('../../compartido/cabecera') %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/cabecera-carrito/mostrar-carrito/<%=datos.carrito.id%>">Regresar</a>
</nav>
<div class="container">
    <% if(datos.error){ %>
        <div class="alert alert-danger" role="alert">
            <%= datos.error %>
        </div>
    <% } %>
    <label for="totalID">Total</label>
    <input class="form-control"
           id="totalID"
           type="text"
           value="<%=datos.carrito.total%>"
           readonly>
    <form action="http://localhost:3000/cabecera-carrito/comprar/"
          method="post">
        <div class="form-group">
            <label for="direccionID">Direccion</label>
            <input id="direccionID"
                   type="text"
                   name="direccion"
                   title="Ingresar la direccion de entrega"
                   class="form-control"
                   placeholder="La Vicentina">
            <small id="direccionIDHelp"
                   class="form-text text-muted">
                Ingresa la direccion de su domicilio
            </small>
        </div>
        <button type="submit"
                class="btn btn-success">
            Pagar
        </button>
        <button type="reset"
                class="btn btn-secondary">
            Limpiar
        </button>
    </form>
</div>
<%- include('../../compartido/pie-de-pagina') %>
